<!DOCTYPE html>
<html>
  <head>
  <style>
	  .ebay-image{
	   width:185px !important;
	   height:65px !important;
	   margin-top: -10px;
	   margin-left: 30px;
	   }
	</style>   
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<link rel='stylesheet' href='/stylesheets/theme.css' />
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.3.1/angular-ui-router.js"></script>
    <script src="//angular-ui.github.io/ui-router/release/angular-ui-router.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="AngularJS/uiroutes.js"></script>
    <script src="controllers/homeCtrl.js"></script>
    <script src="controllers/signinCtrl.js"></script>
    <script src="controllers/signUpCntrl.js"></script>
    <script src="controllers/logoutCtrl.js"></script>
    <script src="controllers/cartCtrl.js"></script>
    <script src="controllers/checkoutCtrl.js"></script>
    <script src="controllers/myOrdersCtrl.js"></script>
    <script src="controllers/profileCtrl.js"></script>
    <script src="controllers/productAdvtCtrl.js"></script>
    <script src="controllers/myPostedCtrl.js"></script>
    <script src="controllers/postBidCtrl.js"></script>
    <script src="controllers/myBidCtrl.js"></script>
    <script src="controllers/viewProfileCtrl.js"></script>
  </head>
  <body ng-app="app">
  <div  style="margin-left: -50px;">
      <img src="/stylesheets/eBay.png" class="ebay-image">
     </div>
   </div>
   <div ui-view>	
   	 <nav class="navbar navbar-default">
	 		<div class="container-fluid">
	    		<!-- Brand and toggle get grouped for better mobile display -->
	    		<div class="navbar-header">
		      		<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
		        		<span class="sr-only">Toggle navigation</span>
		        		<span class="icon-bar"></span>
		        		<span class="icon-bar"></span>
		        		<span class="icon-bar"></span>
		      		</button>
		      		
		      		<a class="navbar-brand" href="#">Hi</a><a class="navbar-brand" ui-sref="signin"><font color="blue">Sign In</font></a><a class="navbar-brand">Or</a><a class="navbar-brand" ui-sref="signup"><font color="blue">Register</font></a>
	    		</div>
		        <!-- Collect the nav links, forms, and other content for toggling -->
			    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			       	<ul class="nav navbar-nav navbar-right">
				   	</ul>
			    </div><!-- /.navbar-collapse -->
	  		</div><!-- /.container-fluid -->
		</nav>
	
	<div class="container" >
      <div ui-view>
      <div class="row">
      {{message}}
		    <% for(var i in data) 
		    {                     
	        %>
				<div class="col-sm-6 col-md-4">
		    		<div class="thumbnail">
		      			<div class="caption">
           		    		<h3><%= data[i].name %></h3>
		        			<table class="table table-bordered" style = "table-layout: fixed;word-break: break-all;">
								<thead>
									<tr>
										<th>Item Description</th>
										<th>Item Price</th>
										<th>Quantity</th>
										<th>Seller Information</th>
									</tr>
								</thead>
								<tbody>
									<tr>
										<td><%= data[i].description %></td>
										<td>$<%= data[i].price %></td>
										<td><%= data[i].quantity %></td>
										<td><%= data[i].sellerInfo %></td>
									</tr>
								</tbody>
							</table>
           				</div>
		    		</div>
		  		</div>
			<% 
		    }  
			%>
		</div>	
   	  
     </div>
    
  </body>
</html>
